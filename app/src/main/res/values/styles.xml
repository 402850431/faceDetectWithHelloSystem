<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FaceRegistered_Edit_Style">
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FaceRegistered_CoverEdit_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/black_frame</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="styleSelfRadioBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radiobutton</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="MedicateRadioTitle">
        <item name="android:button">@drawable/radiobutton</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/MedicateString</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedicateRadioContent">
        <item name="android:button">@drawable/radiobutton</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/MedicateString</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MedicateNoticeText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/MedicateString</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CustomSwitch" parent="AppTheme">
        <item name="colorAccent">#39ac39</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
